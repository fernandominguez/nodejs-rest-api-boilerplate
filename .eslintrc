{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "google",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:mocha/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "max-len": [2, {
      "code": 100,
      "tabWidth": 2,
      "comments": 100
    }],
    "prettier/prettier": [
      "error", {
        "singleQuote": true
    }]
  },
  "plugins": [
    "prettier",
    "mocha"
  ]
}
